# Environment variables declared in this file are NOT automatically loaded by Prisma.
# Please add `import "dotenv/config";` to your `prisma.config.ts` file, or use the Prisma CLI
# with Bun to load environment variables from .env files: https://pris.ly/prisma-config-env-vars.

# -----------------------------------------------------------------------------
# App variables
# -----------------------------------------------------------------------------
APP_NAME=AppShell # Application display/name identifier
APP_VERSION=1.0.0 # Application semantic version
APP_PORT=3000 # Backend HTTP port
APP_ENV=development # development | production | test | e2e
API_VERSION=1.0 # Public API version value
HASH_SALT_ROUNDS=10 # Password hashing rounds (bcrypt/argon config dependent)
THROTTLE_TTL=60000 # Rate limit window in milliseconds (1 minute)
THROTTLE_LIMIT=100 # Max requests allowed per THROTTLE_TTL window
EMAIL_VERIFICATION_TOKEN_TTL=600000 # Email verification token lifetime in milliseconds (10 minutes)
EMAIL_VERIFICATION_URL=http://localhost:4200/verify-email # Frontend verify email route
LOG_LEVEL=log # Typical values: debug | log | warn | error
HEALTH_CHECK_DISK_THRESHOLD_PERCENT=0.9 # Health check disk usage threshold (90%)
HEALTH_CHECK_DISK_PATH=/ # Disk path checked by health endpoints

# -----------------------------------------------------------------------------
# Database variables
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:password@database:5432/DatabaseName?schema=public # Use `database` host in Docker; use localhost for local host-run backend
DATABASE_USER=postgres # Database username
DATABASE_PASSWORD=password # Database password (replace in real env)
DATABASE_HOST=database # Docker service host name (use localhost outside Docker)
DATABASE_PORT=5432 # PostgreSQL port
DATABASE_NAME=DatabaseName # Database name
DATABASE_SCHEMA=public # Prisma/PostgreSQL schema
DATABASE_VOLUME=db_data # Docker volume name used for persistence

# -----------------------------------------------------------------------------
# Auth variables
# -----------------------------------------------------------------------------
JWT_SECRET=replace-with-long-random-access-secret # Secret for access token signing
JWT_REFRESH_SECRET=replace-with-long-random-refresh-secret # Secret for refresh token signing
JWT_TOKEN_AUDIENCE=localhost:4200 # Token audience (usually frontend URL/host)
JWT_TOKEN_ISSUER=localhost:3000 # Token issuer (usually backend URL/host)
JWT_ACCESS_TOKEN_TTL=3h # vercel/ms format or seconds (e.g., 15m, 24h, 3600)
JWT_REFRESH_TOKEN_TTL=7d # vercel/ms format or seconds (e.g., 7d, 30d)

# -----------------------------------------------------------------------------
# Email variables
# -----------------------------------------------------------------------------
RESEND_API_KEY=replace-with-resend-api-key # API key for Resend provider
NOTIFICATION_FROM_EMAIL=onboarding@resend.dev # Replace with your verified sender in production
NOTIFICATION_FROM_NAME=AppShell # Sender display name

# -----------------------------------------------------------------------------
# Scheduler variables
# -----------------------------------------------------------------------------
CRON_JOBS_ENABLED=true # Enable/disable all cron jobs
TASK_REMINDER_CRON=0 0 * * * * # Once every hour
CLEANUP_SESSIONS_CRON=0 0 0 * * * # Every day at midnight
