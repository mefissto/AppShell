{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env APP_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:generate": "npx prisma generate && bash ./scripts/post-prisma-generate.sh",
    "prisma:migrate:dev": "cross-env APP_ENV=development npx prisma migrate dev",
    "prisma:seed": "npx prisma db seed",
    "prisma:seed:dev": "cross-env APP_ENV=development npx prisma db seed",
    "prisma:seed:e2e": "cross-env APP_ENV=e2e npx prisma db seed",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch --verbose",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "node scripts/e2e-setup.js",
    "pretest:e2e:bash": "bash scripts/e2e-setup.sh",
    "test:e2e": "cross-env APP_ENV=e2e NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/swagger": "^11.2.4",
    "@nestjs/terminus": "^11.1.1",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/adapter-pg": "7.4.0",
    "@prisma/client": "^7.4.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "cron-validate": "^1.5.3",
    "dotenv": "^17.2.3",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "nestjs-cls": "^6.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.7.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "pg": "^8.18.0",
    "prettier": "^3.8.1",
    "prisma": "^7.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "setupFiles": [
      "reflect-metadata"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@constants/(.*)$": "<rootDir>/common/constants/$1",
      "^@enums/(.*)$": "<rootDir>/common/enums/$1",
      "^@interfaces/(.*)$": "<rootDir>/common/interfaces/$1",
      "^@entities/(.*)$": "<rootDir>/common/entities/$1",
      "^@filters/(.*)$": "<rootDir>/common/filters/$1",
      "^@utils/(.*)$": "<rootDir>/common/utils/$1",
      "^@decorators/(.*)$": "<rootDir>/common/decorators/$1",
      "^@guards/(.*)$": "<rootDir>/common/guards/$1",
      "^@pagination/(.*)$": "<rootDir>/common/pagination/$1",
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@generated/(.*)$": "<rootDir>/../generated/$1",
      "^@database/(.*)$": "<rootDir>/database/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@system/(.*)$": "<rootDir>/system/$1",
      "^@common/(.*)$": "<rootDir>/common/$1",
      "^@loggers/(.*)$": "<rootDir>/common/loggers/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
